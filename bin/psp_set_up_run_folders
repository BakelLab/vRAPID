#!/usr/bin/env python3
#

from pathlib import Path

# Get folder names
folder_names = [str(f) for f in Path('.').iterdir() if f.is_dir()]

# Write to file with a Sample_ID header to run the pipeline
with open('samples.txt', 'w') as out:
    out.write("Sample_ID\n")  # existing header
    for folder in folder_names:
        out.write(f"{folder}\n")


# Write to the second output file with two columns needed for multibamqc
with open('multibamqc_input.txt', 'w') as out:
    for folder in folder_names:
        out.write(f"{folder}\t {folder}/02_assembly/{folder}_ref.bam\n")
